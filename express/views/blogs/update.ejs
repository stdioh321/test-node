<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head") %>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>
                        <%= blog? `Update` :"Create" %> Blog
                    </h1>
                </div>
                <div class="col-12">
                    <button onclick="javascript:history.back()" class="btn btn-success"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Back
                    </button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <form action="/blogs/<%= blog?.id %>" method="POST">
                        <% if(locals.msg){ %>
                            <div class="alert alert-danger">
                                <%= locals.msg %>
                            </div>
                            <%}%>
                                <div class="form-group">
                                    <label for="title">* Title</label>
                                    <input type="text" class="form-control" id="title" name="title" value="<%= blog?.title %>">
                                </div>
                                <div class="form-group">
                                    <label for="snipped">* Snipped</label>
                                    <input type="text" class="form-control" id="snipped" name="snipped" value="<%= blog?.snipped %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="body">* Body</label>
                                    <textarea name="body" id="body" class="form-control" required><%= blog?.snipped %></textarea>
                                </div>

                                <div class="form-group ">
                                    <button type="submit" class="offset-md-10 col-md-2 offset-6 col-6 btn btn-primary">Send</button>

                                </div>
                    </form>


                </div>
            </div>
        </div>



        <script defer>
            window.addEventListener("load", (ev1) => {
                const input = document.querySelector("form input");
                if (input) {
                    input.focus();
                    input.setSelectionRange(input.value.length, input.value.length);
                }
            });
        </script>
    </body>


</html>